<style>
  .about-two-cols {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 3rem;
    align-items: start;
    margin-bottom: 3rem;
  }

  .about-text-col h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .about-text-col p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .highlights-grid-vertical {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .highlights-grid-vertical .highlight-card {
    min-width: 120px;
  }

  .approach-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .approach-card-new {
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.3s;
  }

  .approach-card-new:hover {
    border-color: rgba(99, 102, 241, 0.3);
    background: rgba(99, 102, 241, 0.05);
  }

  .approach-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .approach-icon-box {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(168, 85, 247, 0.15));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
  }

  .approach-card-new h4 {
    font-size: 0.95rem;
    font-weight: 600;
  }

  .approach-card-new p {
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .about-two-cols {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .highlights-grid-vertical {
      grid-template-columns: repeat(4, 1fr);
    }

    .approach-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 580px) {
    .highlights-grid-vertical {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Stack Section - New Design 3+2 */
  .stack-grid-top {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .stack-grid-bottom {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 66%;
    margin: 0 auto;
  }

  .stack-category-new {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.25rem;
  }

  .stack-category-new h3 {
    font-size: 0.85rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .stack-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .stack-category-new .stack-badge {
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Backend - Blue */
  .stack-category-new.backend .stack-badge {
    background: rgba(96, 165, 250, 0.15);
    color: #60a5fa;
    border: 1px solid rgba(96, 165, 250, 0.25);
  }
  .stack-category-new.backend h3 { color: #60a5fa; }

  /* Database - Green */
  .stack-category-new.database .stack-badge {
    background: rgba(34, 197, 94, 0.15);
    color: #4ade80;
    border: 1px solid rgba(34, 197, 94, 0.25);
  }
  .stack-category-new.database h3 { color: #4ade80; }

  /* DevOps - Orange */
  .stack-category-new.devops .stack-badge {
    background: rgba(249, 115, 22, 0.15);
    color: #fb923c;
    border: 1px solid rgba(249, 115, 22, 0.25);
  }
  .stack-category-new.devops h3 { color: #fb923c; }

  /* Quality - Pink */
  .stack-category-new.quality .stack-badge {
    background: rgba(236, 72, 153, 0.15);
    color: #f472b6;
    border: 1px solid rgba(236, 72, 153, 0.25);
  }
  .stack-category-new.quality h3 { color: #f472b6; }

  /* AI - Purple */
  .stack-category-new.ai .stack-badge {
    background: rgba(168, 85, 247, 0.15);
    color: #c084fc;
    border: 1px solid rgba(168, 85, 247, 0.25);
  }
  .stack-category-new.ai h3 { color: #c084fc; }

  @media (max-width: 900px) {
    .stack-grid-top {
      grid-template-columns: repeat(2, 1fr);
    }
    .stack-grid-bottom {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .stack-grid-top,
    .stack-grid-bottom {
      grid-template-columns: 1fr;
    }
  }
</style>
