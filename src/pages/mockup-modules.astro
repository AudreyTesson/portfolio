    const btnText = btn.querySelector('.sme-btn-text');

    const isExpanded = hiddenModules.classList.contains('visible');

    if (isExpanded) {
      // Fermer
      hiddenModules.classList.remove('visible');
      chevron.classList.remove('rotated');
      btn.classList.remove('expanded');
      progressFill.classList.remove('complete');
      count.classList.remove('complete');
      count.textContent = '6';
      btnText.textContent = 'Afficher les 4 autres modules';
    } else {
      // Ouvrir
      hiddenModules.classList.add('visible');
      chevron.classList.add('rotated');
      btn.classList.add('expanded');
      progressFill.classList.add('complete');
      count.classList.add('complete');
      count.textContent = '10';
      btnText.textContent = 'Masquer les modules';
    }
  }
</script>
